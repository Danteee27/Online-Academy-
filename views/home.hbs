                el: ".swiper-pagination2",
                clickable: true,
            },navigation: {
                nextEl: ".mySwiper2 .swiper-button-next",
                prevEl: ".mySwiper2 .swiper-button-prev",
            },
        });
        var swiper3 = new Swiper(".mySwiper3", {
            slidesPerView: 4,
            spaceBetween: 30,
            slidesPerGroup: 1,
            loop: true,
            loopFillGroupWithBlank: true,
            pagination: {
                el: ".swiper-pagination3",
                clickable: true,
            },navigation: {
                nextEl: ".mySwiper3 .swiper-button-next",
                prevEl: ".mySwiper3 .swiper-button-prev",
            },
        });
        var swiper4 = new Swiper(".mySwiper4", {
            slidesPerView: 4,
            spaceBetween: 30,
            slidesPerGroup: 1,
            loop: true,
            loopFillGroupWithBlank: true,
            pagination: {
                el: ".swiper-pagination5",
                clickable: true,
            },navigation: {
                nextEl: ".mySwiper4 .swiper-button-next",
                prevEl: ".mySwiper4 .swiper-button-prev",
            },
        });
    </script>
{{/section}}


<div class="w-100" style="width: 100%">

    <div class="row">
        <div class="col-12 bg-transparent gradient-home">
            <img class="img-thumbnail float-right mt-3 p-0 border-0" style="width: 500px;height: 350px"
                 src="/imgs/posterHome.png" alt="posterHome">

            <div class="jumbotron jumbotron-fluid mt-4 gradient-home">
