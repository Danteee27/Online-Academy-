                                        <img class="card-img-top"
                                             src="https://drive.google.com/uc?export=view&id={{this.image}}"
                                        alt="Card image cap">
                                        <div class="card-body" style="height: 60%">
                                            <div class="d-flex justify-content-start">
                                                <h5 class="card-title text-left">{{this.courseName}}</h5>
                                            </div>
                                            <p class="card-text">
                                                                        <span>
                                            <div class="checked w-100 d-flex flex-column"
                                                 style="font-size: medium; height: 30%">
                                                <div class="d-flex justify-content-start">
                                                    {{this.rating}}&nbsp;
                                                    <div>{{{printStarByDouble this.rating}}} </div>
                                                </div>

