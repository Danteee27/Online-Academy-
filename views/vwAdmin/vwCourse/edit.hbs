<form method="post">
  <div class="card">
    <h4 class="card-header">
      Edit Category
    </h4>
    <div class="card-body">
      <div class="form-group">
        <label for="txtCourseID">#</label>
        <input name="courseID" type="text" class="form-control" id="txtCourseID" value="{{this.course.courseID}}" readonly>
      </div>
      <div class="form-group">
        <label for="txtCourseName">Course Name</label>
        <input name="courseName" type="text" class="form-control" id="txtCourseName" autofocus placeholder="JS 100 day to PRO" value="{{this.course.courseName}}">
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-outline-success" href="/admin/courses/view/{{this.course.catID}}" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
        <button type="submit" class="btn btn-danger" formaction="/admin/courses/hide">
            <i class="fa fa-eye-slash" aria-hidden="true"></i>
            Hide
        </button>
        <button type="submit" class="btn btn-danger" formaction="/admin/courses/unhide">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Unhide
        </button>
      <button type="submit" class="btn btn-danger" formaction="/admin/courses/del">
        <i class="fa fa-trash" aria-hidden="true"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-primary" formaction="/admin/courses/edit">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>