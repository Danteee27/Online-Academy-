<body>
  <div>
    <div class="card">
    <h4 class="card-header">
        Add course <i class="fa fa-file-text" aria-hidden="true"></i>
    </h4>
    {{#if this.empty}}
        <div class="card-body">
            No data!
        </div>
    {{else}}
  <form style="margin-top: 2em; margin-left: 1em; margin-right: 1em;" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCourseName">Course Name </label>
      <input type="text" class="form-control" id="inputCourseName" placeholder="Course name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputLN">Lecturer Name</label>
    <input type="text" class="form-control" id="inputLN" placeholder="Lecturer name">
    </div>
  </div>
  <div class="form-group">
      <label for="inputCourseIMG">Image</label>
    <input type="text" class="form-control" id="inputCourseIMG" placeholder="img url here">
    </div>
  <div class="form-group">
    <label for="inputCourseDes">Description</label>
  <div id="editor">
  <p><br></p>
  <p><br></p>
  <p><br></p>
  </div>
  </div>
  <!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill('#editor', {
    theme: 'snow'
  });
</script>
  <div class="form-group">
    <label for="inputCourseSDes">Short Description</label>
    <textarea type="text" class="form-control" id="inputCourseSDes" placeholder=""></textarea>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="inputCoursePrice">Price per Student</label>
      <input type="text" class="form-control" id="inputCoursePrice" placeholder="vnd">
    </div>
    <div class="form-group col-md-2">
      <label for="inputCourseDis">Discount</label>
      <input type="text" class="form-control" id="inputCourseDis" placeholder="">
    </div>
    <div class="form-group col-md-1">
      <label for="inputStuNum">Max student(s)</label>
      <input type="text" class="form-control" id="inputStuNum" placeholder="">
    </div>
    <div class="form-group col-md-3">
      <label for="inputCourseField">Field</label>
      <select id="inputCourseField" class="form-control">
        <option selected>Choose...</option>
        <option>...</option>
      </select>
    </div>
    <div class="form-group col-md-3 ">
      <label for="inputCourseCat">Category</label>
      <select id="inputCourseCat" class="form-control">
        <option selected>Choose...</option>
        <option>...</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Check me out
      </label>
    </div>
  </div>
  <div class="form-group d-flex justify-content-between">
  <button type="submit" class="btn btn-primary">Add Course</button>
  <a class="btn btn-primary" href="/user/editCourse" role="button" value="Add">Back</a>
  </div>
</form>
    {{/if}}

