<!--Phan Huy profile view-->
<div class="row rounded-14.5 shadow-lg rounded-20 border-info" style="width: 70%; margin-left:15%">
    <div class="col-lg-12 mx-auto mt-3" style="width: 80%">
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="px-3 pt-0 pb-4" style="background-image: url(https://drive.google.com/uc?export=view&id={{this.teacher.bground}})">
                <div class="media align-items-end">
                    <div class="mr-3 mt-3">
                        <img style="width: 350px; height: 350px; box-shadow: 2px 2px black;" src="https://drive.google.com/uc?export=view&id={{this.teacher.avatar}}" alt="This's avatar" class="rounded-circle mb-2 img-thumbnail">
                        
                    </div>
                </div>
                <div class="media-body mb-5 text-white mt-3">
                    <strong><h1 class="mt-0 mb-0 font-weight-bold" style="text-shadow:2px 2px black">Dr.{{this.teacher.teacherName}}</h1></strong>
                    <p class="mb-4 font-weight-bolder" style="text-shadow:2px 2px black">{{this.teacher.teacherBio}}</p>
                </div>
            </div>
        </div>
        <div class="bg-light p-4 row justify-content-between">
            <div class="col-md-2 ml-0 pl-0">
                <a href="/teacher/profile/edit?id={{this.teacher.teacherID}}" class="shadow-sm btn btn-outline-primary btn-lg btn-block"><i class="fa fa-edit">  Edit profile</i></a>
            </div>
            <div class="list-inline mb-0 col-md-4 m-0 p-0" style="color: black;">
                <li class="list-inline-item p-2 text-center">
                    <h5 class="font-weight-bold mb-0">{{this.teacher.numCourses}}</h5><small class="text-muted"> <i class="fa fa-book mr-1"></i>Courses</small>
                </li>
                <li class="list-inline-item p-2 text-center">
                    <h5 class="font-weight-bold mb-0">{{this.teacher.totals_stu}}</h5><small class="text-muted"> <i class="fa fa-heart mr-1" style="color: red"></i>Students</small>
                </li>
                <li class="list-inline-item p-2 pr-0 text-center">
                    <h5 class="font-weight-bold mb-0">{{this.teacher.reviews}}</h5><small class="text-muted"> <i class="fa fa-flag" aria-hidden="true"style="color: yellowgreen"> Reviews</i></small>
                </li>
                 <li class="list-inline-item p-2 pr-0 text-center">
                    <h5 class="font-weight-bold mb-0">{{this.teacher.rating}}</h5><small class="text-muted"> <i class="fa fa-star mr-1" style="color: #fbe375">Rating</i></small>
                </li>
            </div>
    
        </div>
        <div class="px-4 py-3">
            <h4 id="#about" class="mb-1">About</h4>
            <div class="p-4 rounded shadow-sm bg-light">
                {{{this.teacher.description}}}
            </div>
        </div>
        <div class="py-4 px-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h4 id="#courses" class="mb-0">My Courses</h4>
                <a href="/teacher/addCourse?id={{this.teacher.teacherID}}" class="btn btn-group-sm btn-outline-primary">Add course</a>
            </div>
            <div class="row">
                    {{#if this.empty}}
                        <div class="card-body">
                            Không có dữ liệu!
                        </div>
                    {{else}}
                    <div class="card-body">
                        <section id="gallery">
                            <div class="container">
                                <div class="row">
                                    {{#each this.courses}}
                                        <div class="col-lg-4 mb-4">
                                            <a href="/course/{{courseID}}_{{courseName}}">
                                                <div class="shadow card" style=" border-style:double" >
                                                        <img src="https://drive.google.com/uc?export=view&id={{image}}" alt="" height="200px" class="card-img-top">
                  
                                                    <div class="card-body" >
                                                        <div style="display: flex; justify-content:space-between">
                                                        <h5 class="text-dark card-title">{{courseName}}</h5>
                                                        {{#if completed}}
                                                        <span class="text-success">Completed <i class="fa fa-check-circle-o" aria-hidden="true"></i></span>
                                                        
                                                        {{else}}
                                                        <span class="text-success">Updating <i class="fa fa-book" aria-hidden="true"></i></span>
                                                        {{/if}}
                                                        </div>
                                                        <small>
                                                        {{{description}}}
                                                        </small>
                                                        <a href="/lectures/add?id={{courseID}}" class="btn btn-outline-primary btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i>  Upload</a>
                                                        <a href="/teacher/editCourse?id={{courseID}}" class="btn btn-outline-success btn-sm"><i class="fa fa-cogs" aria-hidden="true"></i>  Edit</a>
                                                        <a href="/teacher/delCourse?id={{courseID}}" class="btn btn-outline-danger btn-sm"><i class="fa fa-trash"></i>  Delete</a>

                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </section>
                    {{/if}}
            </div>
        </div>
    </div>
</div>
</div>
