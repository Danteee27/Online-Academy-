<!--Phan Huy profile view-->
<div class="row rounded-14.5 shadow-lg rounded-20 border-info">
    <div class="col-lg-12 mx-auto mt-3">
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="px-3 pt-0 pb-4" style="background-image: url(https://drive.google.com/uc?export=view&id={{this.teacher.bground}})">
                <div class="media align-items-end">
                    <div class="mr-3 mt-3">
                        <img src="https://drive.google.com/uc?export=view&id={{this.teacher.avatar}}" alt="This's avatar" width="350" class="rounded-circle mb-2 img-thumbnail">
                        
                    </div>
                </div>
                <div class="media-body mb-5 text-white mt-3">
                    <strong><h1 class="mt-0 mb-0 font-weight-bold">Dr.{{this.teacher.teacherName}}</h1></strong>
                    <p class="mb-4 font-weight-bolder">{{this.teacher.teacherBio}}</p>
                </div>
            </div>
        </div>
        <div class="bg-light p-4 d-flex justify-content-end">
            <div class="list-inline mb-0" style="color: black;">
                <li class="list-inline-item">
                    <h5 class="font-weight-bold mb-0 d-block">{{this.teacher.numCourses}}</h5><small class="text-muted"> <i class="fa fa-book mr-1"></i>Courses</small>
                </li>
                <li class="list-inline-item">
                    <h5 class="font-weight-bold mb-0 d-block">{{this.teacher.totals_stu}}</h5><small class="text-muted"> <i class="fa fa-heart mr-1" style="color: red"></i>Students</small>
                </li>
                <li class="list-inline-item">
                    <h5 class="font-weight-bold mb-0 d-block">{{this.teacher.reviews}}</h5><small class="text-muted"> <i class="fa fa-star mr-1" style="color: yellowgreen">Reviews</i></small>
                </li>
<a href="/teacher/profile/edit?id={{this.teacher.teacherID}}" class="btn btn-outline-dark btn-lg btn-block"><i class="fa fa-edit">Edit profile</i></a>
            </div>
        </div>
        <div class="px-4 py-3">
            <h4 id="#about" class="mb-1">About</h4>
            <div class="p-4 rounded shadow-sm bg-light">
                {{this.teacher.description}}
            </div>
        </div>
        <div class="py-4 px-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h4 id="#courses" class="mb-0">My Courses</h4>
                <a href="/teacher/addCourse?id={{this.teacher.teacherID}}" class="btn btn-group-sm btn-outline-dark">Add course</a>
            </div>
            <div class="row">
                    {{#if this.empty}}
                        <div class="card-body">
                            Không có dữ liệu!
                        </div>
                    {{else}}
                    <div class="card-body">
                        <section id="gallery">
                            <div class="container">
                                <div class="row">
                                    {{#each this.courses}}
                                        <div class="col-lg-4 mb-4">
                                            <a href="/course/{{courseID}}_{{courseName}}">
                                                <div class="card" >
                                                        <img src="https://drive.google.com/uc?export=view&id={{image}}" alt="" class="card-img-top">
                                                    <div class="card-body">
                                                        <h5 class="card-title">{{courseName}}</h5>
                                                        <p class="card-text">{{description}}</p>
                                                        <a href="" class="btn btn-outline-success btn-sm">Edit</a>
                                                        <a href="" class="btn btn-outline-danger btn-sm"><i class="fa fa-trash"></i>Delete</a>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </section>
                    {{/if}}
            </div>
        </div>
    </div>
</div>
</div>